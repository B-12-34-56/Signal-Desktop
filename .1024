#--------------------------------------------
# SIGNAL DESKTOP DEVELOPMENT CONFIGURATION
#--------------------------------------------

# Command to run when "Run" button clicked
# This will launch both the main app and sticker creator
run_command:
  - pnpm start
  - cd sticker-creator && pnpm dev

# Command to install or update dependencies
# This will execute each time a new thread is created to ensure dependencies are up-to-date
dependency_command: pnpm install && cd sticker-creator && pnpm install